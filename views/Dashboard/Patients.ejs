                      <!-- Boucle à travers les données des patients et générer les lignes -->
                      <% Patients.forEach(patient => { 
                        if (patient.id !== user.id) { %>
                      <tr id="<%= patient.id %>">
                        <td class="text-center">
                          <input type="checkbox" class="form-check-input"  data-id="<%= patient.id %>">
                        </td>
                        <td><%- patient.firstName + " " + patient.lastName%></td>
                        <td><%- patient.telephone %></td>
                        <td><%- patient.address %></td>
                        <td><%- patient.email %></td>
                      </tr>
                      <% } }) %>
                    </tbody>
                  </table>                    
            </div>
          </div>
        </div>
      </div>
    </div>
